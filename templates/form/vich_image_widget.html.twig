{%- block vich_image_widget -%}
    {%- if errors|length > 0 -%}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' is-invalid')|trim}) -%}
    {%- endif -%}
    {{- form_widget(form.file, {attr: attr, id: form.vars.id}) -}}
    {%- if form.delete is defined -%}
        {{- form_row(form.delete) -}}
    {%- endif -%}

    {%- if image_uri -%}
        <label for="{{ form.vars.id }}" class="image_label">
            <img src="{{ asset_helper is same as(true) ? asset(image_uri) : image_uri }}" alt="" />
        </label>
    {% else %}
        <label for="{{ form.vars.id }}" class="image_label">
            <img src="{{ asset('build/images/default-image.jpg') }}" class="default_img" alt="" data-origin="{{ asset('build/images/default-image.jpg') }}">
        </label>
    {%- endif -%}
    {%- if download_uri -%}
        <a href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download>
            {{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}
        </a>
    {%- endif -%}
{%- endblock -%}