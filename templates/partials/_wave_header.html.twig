<header class="wave-header">
    <div class="wave-header_background">
        <div class="container">
            <div>
                <div class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %}
                        <a href="{{ breadcrumb.path }}" class="breadcrumb-link">{{ breadcrumb.label }}</a>
                        {{ loop.last ? '' : '<i class="fa-solid fa-chevron-right"></i>'}}
                    {% endfor %}
                </div>
                <div class="wave-header_body">
                    <h1 class="wave-header_title">{{ title }}</h1>
                    <p>
                        {{ description }}
                    </p>
                    {% if actions is defined %}
                        <div class="wave-header_action">
                            {% for action in actions %}
                                <a href="{{ action.path }}" class="btn btn-outline-light">{{ action.label }}</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="wave">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="wave-header-svg" preserveAspectRatio="none">
            <path fill-opacity="1" d="M0,160L80,165.3C160,171,320,181,480,160C640,139,800,85,960,64C1120,43,1280,53,1360,58.7L1440,64L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z"></path>
        </svg>
    </div>
</header>